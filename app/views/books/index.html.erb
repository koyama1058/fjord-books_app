<p id="notice"><%= notice %></p>

<h1><%= Book.model_name.human(count: 2) %></h1>

<table>
  <thead>
    <tr>
      <th><%= Book.human_attribute_name("book.title") %></th>
      <th><%= Book.human_attribute_name("book.memo") %></th>
      <th><%= Book.human_attribute_name("book.author") %></th>
      <th><%= Book.human_attribute_name("book.picture") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to I18n.t('views.books.show'), book %></td>
        <td><%= link_to I18n.t('views.books.edit'), edit_book_path(book) %></td>
        <td><%= link_to I18n.t('views.books.destroy'), book, method: :delete, data: { confirm: I18n.t('views.books.are_you_sure?') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to I18n.t('views.books.new_book'), new_book_path %>
