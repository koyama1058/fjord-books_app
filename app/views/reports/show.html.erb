<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @report.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @report.text %>
</p>

<p>
  <strong>Created_at:</strong>
  <%= @report.created_at %>
</p>

<%= form_with(url: report_comments_path(@report), local: true, method: :post ) do |f| %>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>

  <div class="action">
    <%= f.submit '送信' %>
  </div>
<% end%>

<%= render partial: 'layouts/comment', locals: { comments: @comments } %>

<% if current_user == @report.user %>
  <%= link_to 'Edit', edit_report_path(@report) %> |
<% end %>
<%= link_to 'Back', reports_path %>
