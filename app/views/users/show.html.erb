<h1>ユーザー詳細</h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:zip) %></th>
      <th><%= User.human_attribute_name(:address) %></th>
      <th><%= User.human_attribute_name(:introduction) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @user.name %></td>
      <td><%= @user.email %></td>
      <td><%= @user.zip %></td>
      <td><%= @user.address %></td>
      <td><%= @user.introduction %></td>
      <% if current_user.id == @user.id%>
        <td><%= link_to t('views.common.edit'), edit_user_registration_path %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<br>
